<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.AddMembersListController">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label text="Select Members">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Segoe UI Black" size="19.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="selectAll" mnemonicParsing="false" onAction="#selectAllAction" style="-fx-background-radius: 15;" text="Select All">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <effect>
                  <InnerShadow />
               </effect>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <ListView fx:id="activeList" prefHeight="350.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin>
         <effect>
            <DropShadow />
         </effect>
      </ListView>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label text="Group Name: ">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font></Label>
            <TextField fx:id="groupNameField">
               <effect>
                  <DropShadow />
               </effect></TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button fx:id="createGroup" mnemonicParsing="false" onAction="#createGroupAction" style="-fx-background-radius: 15;" text="Create Group">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
               <effect>
                  <InnerShadow />
               </effect>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancelAction" style="-fx-background-radius: 15;" text="Cancel">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
               <effect>
                  <InnerShadow />
               </effect>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
